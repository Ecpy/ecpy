"""False dependencies declaration used for testing.

"""
from __future__ import (division, unicode_literals, print_function,
                        absolute_import)

from enaml.workbench.api import PluginManifest, Extension

from ecpy.app.dependencies.dependencies import (BuildDependency,
                                                RuntimeDependency)


BUILD_DEP_POINT = 'ecpy.app.dependencies.build'

RUNTIME_DEP_POINT = 'ecpy.app.dependencies.runtime'


enamldef BuildDep(PluginManifest):
    """Build dependency contributor.

    """
    id = 'test.build_dep'

    Extension:
        id = 'build_deps'
        point = BUILD_DEP_POINT
        BuildDependency:
            id = 'test'
            attr err : bool = False
            attr run = ('test_run',)
            collect => (workbench, obj, getter, dependencies, errors):
                if err:
                    errors[str(obj)] = 'Failed to get val'
                dependencies['val'] = getter(obj, 'val')
                return run

enamldef RuntimeDep(PluginManifest):
    """Runtime dependency contributor.

    """
    id = 'test.runtime_dep'

    Extension:
        id = 'runtime_deps'
        point = RUNTIME_DEP_POINT
        RuntimeDependency:
            id = 'test_run'
            attr err : bool = False
            attr una : bool = False
            collect =>  (workbench, owner, obj, getter, dependencies,
                         unavailable, errors):
                if err:
                    errors[str(obj)] = 'Failed to get run'
                    return
                if una:
                    unavailable.add('run')
                    return
                dependencies['run'] = getter(obj, 'run')

            request => (workbench, owner, dependencies, unavailable, errors):
                if err:
                    errors['run'] = 'Failed to get run'
                    return
                if una:
                    print('r')
                    unavailable.add('run')
                    return
                dependencies['run'] = 1

            release => (workbench, owner, dependencies):
                del dependencies['run']
